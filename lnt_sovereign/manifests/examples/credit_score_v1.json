{
    "domain_id": "SOVEREIGN_CREDIT_XGB",
    "domain_name": "Sovereign Credit Scoring (Tabular/ML)",
    "version": "1.0.0",
    "description": "Deterministic safety layer for Credit Scoring models (XGBoost/Classical ML).",
    "entities": [
        "debt_to_income_ratio",
        "fico_score",
        "applicant_age",
        "loan_to_value_ratio"
    ],
    "constraints": [
        {
            "id": "RULE_DTI_LIMIT",
            "entity": "debt_to_income_ratio",
            "operator": "LT",
            "value": 0.45,
            "description": "Debt-to-Income ratio must be under 45% for approval.",
            "severity": "IMPOSSIBLE",
            "weight": 1.0
        },
        {
            "id": "RULE_MIN_CREDIT_SCORE",
            "entity": "fico_score",
            "operator": "GT",
            "value": 580,
            "description": "FICO score must be greater than 580 for sovereign certification.",
            "severity": "TOXIC",
            "weight": 0.8
        },
        {
            "id": "RULE_BIAS_AGE_GAP",
            "entity": "applicant_age",
            "operator": "GT",
            "value": 18,
            "description": "Bias Mitigation: Applicant must be of legal age.",
            "severity": "IMPOSSIBLE",
            "weight": 1.0
        },
        {
            "id": "RULE_LOAN_TO_VALUE",
            "entity": "loan_to_value_ratio",
            "operator": "LT",
            "value": 0.95,
            "description": "Loan-to-Value ratio must not exceed 95%.",
            "severity": "WARNING",
            "weight": 0.5
        }
    ]
}